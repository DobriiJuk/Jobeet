{% extends '::base.html.twig' %}
{% block title %}
    Category Nr. {{ cat.id }}
{% endblock %}
{% block body %}
    <div class="table">
        <table border="1">
            <tbody>
                <tr>
                   <th>Id</th>
                   <td>{{ cat.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ cat.name }}</td>
                </tr>
            </tbody>
        </table>
    <br>
    <ul>
        <li><a href="{{ path('cat_index') }}"><h4>Back to Category list</h4></a></li>
        <li><a href="{{ path('cat_edit',{'id':cat.id}) }}"><h4>Edit</h4></a></li>
        <li><a href="{{ path('delete_cat',{'id':cat.id}) }}"><h4>Delete</h4></a></li>
    </ul>

{% endblock %}