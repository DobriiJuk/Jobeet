{% extends 'base.html.twig' %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/categories.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/jquery.auto-complete.min.js') }}"></script>
{% endblock %}

{% block stylesheet %}
